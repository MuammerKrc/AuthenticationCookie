@model RoleList
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Role Atama</h2>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <form action="~/Admin/RoleAssign" method="post">
                @if (ViewData["userName"] != null)
                {
                    <div class="card-header text-center bg-dark text-white">
                        @ViewData["userName"]
                    </div>
                }
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-title text-center">Bulunduğu Roller</div>
                            @if (Model.OwnerRole.Any())
                            {
                                <table class="table table-hover">

                                    @foreach (var item in Model.OwnerRole)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                        </tr>
                                    }


                                </table>
                            }
                            else
                            {
                                <div class="alert alert-info">Herhangi Bir Rolü Bulunmamaktadır</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-title  text-center">Role Ekle</div>
                        @if (Model.AddRole.Any())
                        {
                            <table class="table table-hover">

                                @for (int i = 0; i < Model.AddRole.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.AddRole[i].Name</td>
                                        <tD><input type="checkbox" asp-for="@Model.AddRole[i].Exist" />Ekle </tD>
                                        <td><input type="hidden" asp-for="@Model.AddRole[i].Name" /></td>
                                    </tr>
                                }
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info">Eklenebilecek Bir Role Bulunmamaktadır</div>
                        }


                    </div>

                    <div class="col-md-6">
                        <div class="card-title  text-center">Role Sil</div>
                        @if (Model.DeleteRole.Any())
                        {
                            <table class="table table-hover">
                                @for (int i = 0; i < Model.DeleteRole.Count; i++)
                                {
                                <tr>
                                    <td>@Model.DeleteRole[i].Name</td>
                                    <tD><input type="checkbox" asp-for="@Model.DeleteRole[i].Exist" />Sil </tD>
                                    <td><input type="hidden" asp-for="@Model.DeleteRole[i].Name" /></td>

                                </tr>
                                }
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info">Silinecek Bir Rolü Bulunmamaktadır</div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <input asp-for="UserId" type="hidden" />
                        <button type="submit" class="btn btn-primary form-control">
                            Kaydet
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
