
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<RoleViewModel>
<h3>Roller</h3>
<hr />

@if (Model.Any())
{
    <table class="table table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Rol ismi</th>
            <th>Silme</th>
            <th>Güncelleme</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <form asp-action="RoleDelete" asp-route-roleId="@item.Id" method="post">

                        <button class="btn btn-success" type="submit">sil</button>
                    </form>
                </td>
                <td><a class="btn btn-info" asp-action="RoleUpdate" asp-route-roleId="@item.Id">Güncelle</a></td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-info"> Role bulunamadı</div>
}

<a asp-action="RoleCreate" class="btn btn-info">Role Oluştur</a>

